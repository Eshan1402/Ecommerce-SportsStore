<%- include('layout/header') %>
<main class="pt-20 px-6">
  <section class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">All Customers</h1>
    <% if (customers.length === 0) { %>
      <p class="text-gray-600">No customers found.</p>
    <% } else { %>
      <table class="min-w-full bg-white rounded shadow">
        <thead>
          <tr>
            <th class="py-2 px-4 text-left">Name</th>
            <th class="py-2 px-4 text-left">Email</th>
            <th class="py-2 px-4 text-left">City</th>
          </tr>
        </thead>
        <tbody>
          <% customers.forEach(customer => { %>
            <tr>
              <td class="py-2 px-4"><%= customer.username %></td>
              <td class="py-2 px-4"><%= customer.email %></td>
              <td class="py-2 px-4"><%= customer.city %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
    <div class="mt-8 text-right">
      <a href="/admin/dashboard" class="text-primary hover:underline">Back to Dashboard</a>
    </div>
  </section>
</main>
<%- include('layout/footer') %> 