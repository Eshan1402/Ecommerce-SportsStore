<%- include('layout/header') %>

<main class="pt-20">
    <!-- Hero Section -->
    <section class="hero-section relative py-20 flex items-center justify-center overflow-hidden">
        <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-r from-primary/80 to-secondary/80"></div>
        </div>
        
        <div class="hero-content relative z-10 text-center text-white max-w-4xl mx-auto px-6">
            <h1 class="text-5xl md:text-6xl font-bold mb-6">
                SHOP <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-300 to-orange-400">SPORTS</span> EQUIPMENT
            </h1>
            <p class="text-xl md:text-2xl mb-8 opacity-90 max-w-2xl mx-auto">
                Discover premium gear for every sport. From beginners to professionals, we have everything you need.
            </p>
        </div>
    </section>

    <!-- Products Section -->
    <section class="py-20 px-6">
        <div class="max-w-7xl mx-auto">
            <!-- Filters and Search -->
            <div class="mb-12">
                <div class="flex flex-col md:flex-row justify-between items-center gap-6">
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <input type="text" placeholder="Search products..." class="form-input pl-12 pr-4 w-64">
                            <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                        </div>
                        <select class="form-input">
                            <option>All Categories</option>
                            <option>Sneakers</option>
                            <option>Clothing</option>
                            <option>Watches</option>
                        </select>
                    </div>
                    <div class="flex items-center space-x-4">
                        <span class="text-gray-600">Sort by:</span>
                        <select class="form-input">
                            <option>Featured</option>
                            <option>Price: Low to High</option>
                            <option>Price: High to Low</option>
                            <option>Newest</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                <% products.forEach((product, index) => { %>
                    <div class="product-card fade-in-up" style="animation-delay: <%= index * 0.1 %>s;">
                        <div class="product-image-container">
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-64 object-cover">
                            <div class="product-overlay">
                                <div class="product-actions">
                                    <form action="/cart/add/<%= product.id %>" method="POST" class="w-full">
                                        <button type="submit" class="btn-primary w-full mb-2">
                                            <i class="fas fa-cart-plus mr-2"></i>
                                            Add to Cart
                                        </button>
                                    </form>
                                    <form action="/buy/<%= product.id %>" method="POST" class="w-full">
                                        <button type="submit" class="btn-accent w-full">
                                            <i class="fas fa-bolt mr-2"></i>
                                            Buy Now
                                        </button>
                                    </form>
                                </div>
                            </div>
                            
                            <!-- Product Badge -->
                            <div class="absolute top-4 left-4">
                                <span class="bg-gradient-to-r from-warning to-secondary text-white px-3 py-1 rounded-full text-sm font-bold">
                                    Hot
                                </span>
                            </div>
                            
                            <!-- Wishlist Button -->
                            <button class="absolute top-4 right-4 w-10 h-10 bg-white bg-opacity-90 rounded-full flex items-center justify-center text-gray-600 hover:text-red-500 transition-colors">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>
                        
                        <div class="product-info mt-4">
                            <div class="flex items-center justify-between mb-2">
                                <h3 class="text-lg font-semibold text-gray-800"><%= product.name %></h3>
                                <div class="flex text-yellow-400 text-sm">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                            </div>
                            <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= product.description %></p>
                            <div class="flex items-center justify-between">
                                <div class="price text-2xl font-bold">$<%= product.price %></div>
                                <div class="text-sm text-gray-500">
                                    <i class="fas fa-truck mr-1"></i>
                                    Free Shipping
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Load More Button -->
            <div class="text-center mt-16">
                <button class="btn-secondary text-lg px-8 py-4">
                    <i class="fas fa-plus mr-3"></i>
                    Load More Products
                </button>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 px-6 bg-gradient-to-br from-gray-50 to-white">
        <div class="max-w-7xl mx-auto">
            <div class="section-header fade-in-up">
                <h2>Why Shop With Us?</h2>
                <p>Experience the difference with our premium service</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mt-16">
                <div class="feature-card text-center fade-in-left">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt text-3xl"></i>
                    </div>
                    <h3 class="text-lg font-bold mb-3">Secure Shopping</h3>
                    <p class="text-gray-600 text-sm">100% secure payment processing</p>
                </div>
                
                <div class="feature-card text-center fade-in-up">
                    <div class="feature-icon">
                        <i class="fas fa-undo text-3xl"></i>
                    </div>
                    <h3 class="text-lg font-bold mb-3">Easy Returns</h3>
                    <p class="text-gray-600 text-sm">30-day money-back guarantee</p>
                </div>
                
                <div class="feature-card text-center fade-in-up">
                    <div class="feature-icon">
                        <i class="fas fa-truck text-3xl"></i>
                    </div>
                    <h3 class="text-lg font-bold mb-3">Fast Delivery</h3>
                    <p class="text-gray-600 text-sm">Free shipping on orders over $50</p>
                </div>
                
                <div class="feature-card text-center fade-in-right">
                    <div class="feature-icon">
                        <i class="fas fa-headset text-3xl"></i>
                    </div>
                    <h3 class="text-lg font-bold mb-3">24/7 Support</h3>
                    <p class="text-gray-600 text-sm">Always here to help you</p>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.feature-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    padding: 24px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
}

.feature-card:hover {
    transform: scale(1.05);
    box-shadow: 0 20px 25px rgba(0, 0, 0, 0.15);
}

.feature-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin: 0 auto 16px;
}
</style>

<%- include('layout/footer') %>